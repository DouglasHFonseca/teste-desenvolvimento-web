      "email":"douglas.hfonseca@gmail.com"
    }
  },
  "paths":{
    "/pokemons":{
      "post":{
        "tags":["Pokemon"],
        "summary":"Create a pokemon",
        "description":"Create a new category",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "generation":{
                    "type":"number"
                  },
                  "evolution_stage":{
                    "type":"number"
                  },
                  "atk":{
                    "type":"number"
                  },
                  "def":{
                    "type":"number"
                  },
                  "type1":{
                    "type":"string"
                  },
                  "type2":{
                    "type":"string"
                  }
                },
                "example":{
                  "name":"Mewtwo",
                  "description":"Its DNA is almost the same as Mewâ€™s. However, its size and disposition are vastly different.",
                  "generation":"1",
                  "evolution_stage":"0",
                  "atak":"9999",
                  "def":"9999",
                  "type1":"Psychic",
                  "type2":"unknown"
                }
              }
            }
          },
          "required":"true"
        },
        "responses":{
          "201":{
            "description":"Created",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string",
                      "enum":["aced8d93-7162-4014-8c48-f0e2f251f6ab"]
                    },
                    "generation":{
                      "type":"number",
                      "enum":[1]
                    },
                    "evolution_stage":{
                      "type":"number",
                      "enum":["Mewtwo"]
                    },
                    "atk":{
                      "type":"number",
                      "enum":[9999]
                    },
                    "def":{
                      "type":"number",
                      "enum":[9999]
                    },
                    "type1":{
                      "type":"string",
                      "enum":["Psychic"]
                    },
                    "type2":{
                      "type":"string",
                      "enum":["unknown"]
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"Pokemon Already Exists",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string",
                      "enum":["Pokemon Already Exists"]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get":{
        "tags":["Pokemon"],
        "summary":"List all Pokemon",
        "description": "List all poekmons",
        "responses":{
          "200":{
            "description":"Success",
            "content":{
              "application/json":{
                "schema":{
                  "type":"array",
                  "items":{
                    "type":"object",
                    "properties":{
                      "name":{
                        "type":"string"
                      },
                      "generation":{
                        "type":"number"
                      },
                      "evolution_stage":{
                        "type":"number"
                      },
                      "atk":{
                        "type":"number"
                      },
                      "def":{
                        "type":"number"
                      },
                      "type1":{
                        "type":"string"
                      },
                      "type2":{
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}